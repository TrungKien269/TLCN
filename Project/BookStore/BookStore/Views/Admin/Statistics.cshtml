                borderWidth: 1
            }]

        },
        options: {
            title: {
                display: true,
                text: 'Top sale of this month',
                fontSize: 25,
            },
            legend: {
                display: false,
                position: 'right',
                labels: {
                    fontColor: '#000'
                }
            },
            layout: {
                padding: {
                    left: 50,
                    right: 0,
                    top: 0,
                    bottom: 0
                }
            },
            tooltips: {
                enabled: true
            },

            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
