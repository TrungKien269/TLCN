@using BookStore.Models.Objects
@using BookStore.Helper
@{
    Layout = "Order_Layout";
    List<CartBook> ListCartBook = (List<CartBook>) ViewBag.ListCartBook;
}
@model Order

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <form asp-action="ProceedOrder" class="form-control">
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input type="text" asp-for="FullName" />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input type="text" asp-for="PhoneNumber" />
                </div>
                <div class="form-group">
                    <label asp-for="Address"></label>
                    <input type="text" asp-for="Address" />
                </div>
                <input type="submit" value="Order" class="btn btn-primary" />
            </form>
        </div>
        <div class="col-sm-4">
            @foreach (var cartBook in ListCartBook)
            {
            <div class="item_book">
                <p>@cartBook.Book.Name</p>
                <p>@cartBook.Book.CurrentPrice</p>
                <p>@cartBook.Quantity</p>
                <p>@cartBook.SubTotal</p>
            </div>
            }
        </div>
    </div>
</div>