@using BookStore.Models.Objects;
@using System.Net
@using BookStore.Models.Objects;
@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Http.Extensions;
@using Microsoft.AspNetCore.WebUtilities
@using BookStore.Helper;
@{
    Layout = "Profile_Layout";
}
@model User

<div class="col-sm-6">
    @Html.AntiForgeryToken()
    <h2 style="text-align: center">Profile</h2>
    <form asp-action="UpdateUser" asp-controller="UserProfile" id="updateForm" method="post" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FullName" class="control-label"></label>
            <input asp-for="FullName" class="form-control" value="@Model.FullName"/>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            @if (Model.Gender.Equals("Male"))
            {
                <label asp-for="Gender" class="checkbox-inline">
                    <input asp-for="Gender" type="radio" value="Male" checked id="lbMale" />Male
                </label>
                <label asp-for="Gender" class="checkbox-inline">
                    <input asp-for="Gender" type="radio" value="Female" id="lbFemale" />Female
                </label>
                <span asp-validation-for="Gender" class="text-danger"></span>
            }
            else
            {
                <label asp-for="Gender" class="checkbox-inline">
                    <input asp-for="Gender" type="radio" value="Male" id="lbMale" />Male
                </label>
                <label asp-for="Gender" class="checkbox-inline">
                    <input asp-for="Gender" type="radio" value="Female" checked id="lbFemale" />Female
                </label>
                <span asp-validation-for="Gender" class="text-danger"></span>
            }
        </div>
        <div class="form-group">
            <label asp-for="Birthday" class="control-label"></label>
            <input asp-for="Birthday" type="date" class="form-control"/>
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" value="@Model.Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-info" />
        </div>
    </form>
</div>